---
import { tech } from "../constants/index.ts";
import TechItem from "./UI/TechItem.astro";
---

<section class="max-w-6xl mx-auto pb-6 pt-2 mb-12 my-6 px-6">
    <h2 class="text-6xl mb-6">My<span class="font-bold"> tech stack</span></h2>
    <div class="grid grid-cols-8 sm:grid-cols-8 md:grid-cols-12 md:items-center gap-6 max-w-4xl mx-auto">
        {tech.map((item) => (
            
            <TechItem {...item} />
        ))}
    </div>
</div>
</section>

<style>
   .tech-circle {
  position: relative;
  width: 600px;
  height: 600px;
  margin: 0 auto;
}
.tech-circle-item {
  position: absolute;
  top: 50%; left: 50%;
  transform: translate(-50%, -50%);
} 
</style>
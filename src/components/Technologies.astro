---
const tech=[{name:"HTML5",icon:"/tech/HTML5.svg"},{name:"JavaScript",icon:"/tech/JavaScript.svg"},{name:"TypeScript",icon:"/tech/TypeScript.svg"},{name:"React",icon:"/tech/React.svg"},{name:"Next.js",icon:"/tech/Next.js.svg"},{
name:"Astro",icon:"/tech/Astro.svg"
},{name:"CSS3",icon:"/tech/CSS3.svg"},{name:"Tailwind CSS",icon:"/tech/TailwindCSS.svg"},{
name:"Sass",icon:"/tech/Sass.svg"
},{name:"Material UI",
icon:"/tech/MaterialUI.svg"
},{name:"Node js",icon:"/tech/Node.js.svg"},{name:"Git",icon:"/tech/Git.svg"},{name:"GitHub",icon:"/tech/GitHub.svg"},{name:"VS Code",icon:"/tech/VSCode.svg"},{name:"Figma",icon:"/tech/Figma.svg"}];
---

<section class="max-w-6xl mx-auto pb-6 pt-2 mb-12 my-4 ">
    <h2 class="text-6xl mb-4">My<span class="font-bold"> tech stack</span></h2>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-8 gap-6 max-w-4xl mx-auto">
        {tech.map((item) => (
            <div class="flex flex-col items-center">
                <img src={item.icon} alt={item.name} class="w-16 h-16 mb-2 grayscale" />
                <p class="text-sm text-center">{item.name}</p>
            </div>
        ))}
    </div>
</section>